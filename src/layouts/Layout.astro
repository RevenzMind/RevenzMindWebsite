---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content="Rawen Cat 🐱" />
		<meta
			property="og:description"
			content="Welcome to my personal website! I love Cats 😺"
		/>
		<meta property="og:image" content="https://japi.rest/discord/v1/user/1286544389073534976/avatar?size=4096" />
		<meta property="og:url" content="https://rawen.cat" />
		<meta property="og:type" content="website" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Rawen Cat 🐱" />
		<meta
			name="twitter:description"
			content="Welcome to my personal website! I love Cats 😺"
		/>
		<meta name="twitter:image" content="https://japi.rest/discord/v1/user/1286544389073534976/avatar?size=4096" />

		<meta name="theme-color" content="#f1dab8" />
		<meta name="msapplication-TileColor" content="#f1dab8" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="flex bg-black">
		<slot />
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		color: white;
		font-family: 'Inter', system-ui;
	}

	body,
	html {
		min-height: 100vh;
		min-width: 100vw;
		overflow-x: hidden;
	}

	html::-webkit-scrollbar {
        width: 6px;
    }

    html::-webkit-scrollbar-track {
        background: #131313;
    }

    html::-webkit-scrollbar-thumb {
        background-color: #27272a;
        border-radius: 20px;
    }
</style>

<script is:inline src="../../public/oneko.js"></script>
