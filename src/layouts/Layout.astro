---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content="Rawen Cat 🐱" />
		<meta
			property="og:description"
			content="Welcome to my personal website! I love Cats 😺"
		/>
		<meta property="og:image" content="/logo.svg" />
		<meta property="og:url" content="https://rawen.cat" />
		<meta property="og:type" content="website" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Rawen Cat 🐱" />
		<meta
			name="twitter:description"
			content="Welcome to my personal website! I love Cats 😺"
		/>
		<meta name="twitter:image" content="/logo.svg" />

		<meta name="theme-color" content="#f1dab8" />
		<meta name="msapplication-TileColor" content="#f1dab8" />
		<title>{title}</title>
	</head>
	<body class="flex">
		<slot />
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		color: white;
	}

	body,
	html {
		min-height: 100vh;
		min-width: 100vw;
		background-color: black;
	}
</style>
