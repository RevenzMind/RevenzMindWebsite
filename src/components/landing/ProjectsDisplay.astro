---
import { projects } from "../../constants/get/Projects";
import Card from "../common/Card.astro";
---

<Card class="min-h-[200px] w-full md:w-[70%]">
    <div class="flex mb-5 w-full items-center gap-2 px-5 pt-4 pb-4 border-b border-zinc-800/50">
        <svg width="20" height="auto" viewBox="0 0 24 24" fill="white" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 9.88499V17.585C21.9961 18.6021 21.5899 19.5764 20.87 20.295C20.515 20.6518 20.0926 20.9346 19.6274 21.1269C19.1622 21.3192 18.6634 21.4171 18.16 21.415H5.83004C5.32671 21.4163 4.82806 21.3181 4.36278 21.1261C3.89751 20.9341 3.47477 20.652 3.11886 20.2961C2.76295 19.9402 2.48088 19.5175 2.28887 19.0522C2.09686 18.587 1.9987 18.0883 2.00002 17.585V6.42497C1.99738 5.9208 2.09459 5.42109 2.286 4.95466C2.47742 4.48823 2.75927 4.06432 3.11532 3.70735C3.47136 3.35038 3.89454 3.0674 4.36047 2.87477C4.82639 2.68214 5.32586 2.58365 5.83004 2.58497H8.91003C9.54254 2.58679 10.165 2.74362 10.7228 3.04173C11.2807 3.33984 11.757 3.77013 12.11 4.29497L12.98 5.62498C13.0722 5.75939 13.1957 5.86925 13.34 5.94499C13.4835 6.02542 13.6456 6.06679 13.81 6.06499H18.16C18.6628 6.061 19.1613 6.1571 19.6266 6.34767C20.0918 6.53824 20.5145 6.81945 20.87 7.17497C21.5899 7.89357 21.9961 8.86786 22 9.88499Z" fill="currentColor"/>
        </svg>
        
        <h1 class="w-full text-start text-sm font-medium text-zinc-400">Projects</h1>
    </div>
    <div class="w-full mb-4 px-5 overflow-y-auto max-h-[215px] ">
        <div class="w-full flex flex-col gap-4">
            {
                projects.map((project) => (
                    <div class="bg-[#18181b94] hover:bg-[#27272a] transition-all duration-300 rounded-lg px-4 md:px-6 py-4 flex items-center gap-4 w-full group">
                        <div class="text-xl md:text-2xl group-hover:scale-110 transition-transform duration-300">
                            {project.emoji}
                        </div>
                        <div class="flex-1">
                            <h2 class="font-semibold text-zinc-200 text-sm">
                                {project.name}
                            </h2>
                            <p class="text-sm text-zinc-400">
                                {project.description}
                            </p>
                        </div>
                        <div class="flex gap-2">
                            <a
                                href={project.codeLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="bg-[#18181b94] hover:bg-[#27272a] text-sm transition-all duration-300 rounded-lg px-4 py-2 border border-zinc-800 text-zinc-200 flex items-center gap-2 group"
                            >
                                Source Code
                                <div class="text-zinc-400   transition-opacity duration-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                        <polyline points="15 3 21 3 21 9" />
                                        <line x1="10" y1="14" x2="21" y2="3" />
                                    </svg>
                                </div>
                            </a>
                            {project.deployedLink && (
                                <a
                                    href={project.deployedLink}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="bg-[#18181b94] hover:bg-[#27272a] transition-all duration-300 rounded-lg px-4 py-2 border border-zinc-800 text-zinc-200 flex items-center gap-2 group"
                                >
                                    Demo
                                    <div class="text-zinc-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                            <polyline points="15 3 21 3 21 9" />
                                            <line x1="10" y1="14" x2="21" y2="3" />
                                        </svg>
                                    </div>
                                </a>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Card>


