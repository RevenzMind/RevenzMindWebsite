---
import { projects } from "../../constants/get/Projects";
---

<div
    class="bg-[#18181b94] flex flex-col border items-center place-content-center border-zinc-900 rounded-lg min-h-[200px] w-full md:w-[70%] p-4 md:p-10 gap-5"
>
    {
        projects.map((project) => (
            <div class="bg-[#18181b94] rounded-lg px-4 md:px-10 flex flex-col md:flex-row py-3 gap-3 md:gap-5 w-full justify-between items-center">
                <div class=" flex text-left gap-3 md:gap-5 items-center justify-start w-full">
                    <div>
                        <h1 class="text-2xl md:text-3xl">{project.emoji}</h1>
                    </div>
                    <div class="text-left md:text-left">
                        <h1 class="font-semibold text-zinc-200">
                            {project.name}
                        </h1>
                        <p class="text-sm">{project.description}</p>
                    </div>
                </div>
                <div class="w-full lg:w-auto flex gap-2">
                    <a class="w-full  lg:w-[170px] bg-[#18181b94] rounded-lg px-5 py-2 border border-zinc-800 hover:bg-zinc-800 transition-colors text-zinc-200 flex items-center gap-2" href={project.codeLink} target="_blank" title="Source Code">
                        Source Code
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-zinc-200">
                            <path d="M8.08553 18.6112L14.0817 4.60666C14.299 4.09895 14.8868 3.8636 15.3946 4.08097C15.866 4.28283 16.1026 4.80407 15.96 5.284L15.9202 5.39385L9.92409 19.3984C9.70671 19.9061 9.11892 20.1414 8.61121 19.9241C8.13977 19.7222 7.90316 19.201 8.04581 18.721L8.08553 18.6112L14.0817 4.60666L8.08553 18.6112ZM2.29289 11.2931L6.29289 7.29315C6.68342 6.90263 7.31658 6.90263 7.70711 7.29315C8.06759 7.65363 8.09532 8.22087 7.7903 8.61316L7.70711 8.70736L4.41421 12.0003L7.70711 15.2931C8.09763 15.6837 8.09763 16.3168 7.70711 16.7074C7.34662 17.0678 6.77939 17.0956 6.3871 16.7906L6.29289 16.7074L2.29289 12.7074C1.93241 12.3469 1.90468 11.7796 2.2097 11.3874L2.29289 11.2931L6.29289 7.29315L2.29289 11.2931ZM16.2921 7.29191C16.6526 6.93144 17.2198 6.90374 17.6121 7.20878L17.7063 7.29198L21.7071 11.2932C22.0678 11.6538 22.0953 12.2214 21.7899 12.6136L21.7066 12.7078L17.7058 16.7034C17.315 17.0936 16.6818 17.0932 16.2916 16.7024C15.9313 16.3417 15.904 15.7744 16.2093 15.3824L16.2925 15.2882L19.5854 11.9998L16.292 8.70613C15.9015 8.31558 15.9015 7.68242 16.2921 7.29191Z" fill="currentColor"/>
                        </svg>
                    </a>
                    {project.deployedLink && (
                        <a class="  bg-[#18181b94] rounded-lg px-5 py-2 border border-zinc-800 hover:bg-zinc-800 transition-colors text-zinc-200 flex items-center gap-2" href={project.deployedLink} target="_blank" title="Live Demo">
                            Demo
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-zinc-200">
                                <path d="M6.25 5C5.55964 5 5 5.55964 5 6.25V17.75C5 18.4404 5.55964 19 6.25 19H17.75C18.4404 19 19 18.4404 19 17.75V14C19 13.4477 19.4477 13 20 13C20.5523 13 21 13.4477 21 14V17.75C21 19.5449 19.5449 21 17.75 21H6.25C4.45507 21 3 19.5449 3 17.75V6.25C3 4.45507 4.45507 3 6.25 3H10C10.5523 3 11 3.44772 11 4C11 4.55228 10.5523 5 10 5H6.25ZM14 5C13.4477 5 13 4.55228 13 4C13 3.44772 13.4477 3 14 3H20C20.5523 3 21 3.44772 21 4V10C21 10.5523 20.5523 11 20 11C19.4477 11 19 10.5523 19 10V6.41421L14.7071 10.7071C14.3166 11.0976 13.6834 11.0976 13.2929 10.7071C12.9024 10.3166 12.9024 9.68342 13.2929 9.29289L17.5858 5H14Z" fill="currentColor"/>
                            </svg>
                        </a>
                    )}
                </div>
            </div>
        ))
    }
</div>
