


---
import { SocialLinks as socials } from "../../constants/get/Social.ts";
import Card from "../common/Card.astro";
---

<Card class="min-h-[200px] w-full md:w-[70%]">
    <div class="flex mb-5 w-full items-center gap-2 px-5 pt-4 pb-4 border-b border-zinc-800/50">
        <svg width="20" height="auto" viewBox="0 0 24 24" fill="white" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.37 21.25C20.37 21.4489 20.291 21.6397 20.1503 21.7803C20.0097 21.921 19.8189 22 19.62 22H4.38C4.18109 22 3.99032 21.921 3.84967 21.7803C3.70902 21.6397 3.63 21.4489 3.63 21.25C3.63 17.15 8.13 13.97 12 13.97C15.87 13.97 20.37 17.15 20.37 21.25Z" fill="currentColor"/>
            <path d="M17.1 7.11002C17.098 8.11827 16.7972 9.1033 16.2356 9.94067C15.674 10.778 14.8768 11.4302 13.9448 11.8147C13.0127 12.1991 11.9876 12.2987 10.9989 12.1008C10.0103 11.9029 9.10249 11.4164 8.39024 10.7027C7.67799 9.98908 7.19327 9.08031 6.99729 8.09128C6.80132 7.10225 6.90289 6.07735 7.28919 5.14603C7.67549 4.21471 8.32917 3.41878 9.16764 2.85883C10.0061 2.29887 10.9918 2 12 2C13.3535 2.00265 14.6507 2.54219 15.6069 3.50021C16.563 4.45824 17.1 5.75649 17.1 7.11002Z" fill="currentColor"/>
        </svg>
        
        <h1 class="w-full text-start text-sm font-medium text-zinc-400">Socials</h1>
    </div>
    <div class="px-4 mb-6 w-full overflow-y-auto max-h-[215px] custom-scrollbar">
        <div class="w-full flex flex-col gap-4">
            {
                socials.map((social) => (
                    <a
                        href={social.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="bg-[#18181b94] hover:bg-[#27272a] transition-all duration-300 rounded-lg px-4 md:px-6 py-4 flex items-center gap-4 w-full group"
                    >
                        <div class="group-hover:scale-105 transition-transform duration-300 w-8 h-8 flex items-center justify-center">
                            <img
                                src={social.svg}
                                alt={`${social.title} icon`}
                                class="w-6 h-auto object-contain"
                            />
                        </div>
                        <div class="flex-1">
                            <h2 class="font-semibold text-zinc-200 text-sm">
                                {social.title}
                            </h2>
                        </div>
                        <div class="text-zinc-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                <polyline points="15 3 21 3 21 9" />
                                <line x1="10" y1="14" x2="21" y2="3" />
                            </svg>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</Card>

<style>
    .custom-scrollbar {
        scrollbar-width: thin;
        scrollbar-color: #27272a transparent;
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #27272a;
        border-radius: 20px;
        border: transparent;
    }
</style>