---
interface Props {
    emoji: string;
    title: string;
    description: string;
    hasdeployed: boolean;
    url: string;
    github: string;
}

const {emoji, title, description, hasdeployed, url, github} = Astro.props;
---

<div class="project_card">
    <div class="project_info">
        <div class="project_emoji">
            <p>{emoji}</p>
        </div>
        <div class="project_about">
            <h3 class="project_title">{title}</h3>
            <p class="project_description">{description}</p>
        </div>
        <div class="project_links">
            {
                hasdeployed ? (
                        <>
                            <a
                                    href={github}
                                    data-tooltip="View Repository"
                                    class="project_link"
                                    target="_blank"
                            >
                                <svg
                                        width="24px"
                                        height="24px"
                                        stroke-width="1.5"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        xmlns="http://www.w3.org/2000/svg"
